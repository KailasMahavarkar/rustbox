{
	"isolate": {
		"box_dir": "/isolate/box",
		"run_dir": "/isolate/run",
		"user": "rustbox",
		"group": "rustbox",
		"preserve_env": ["PATH", "HOME", "USER"]
	},
	"syscalls": {
		"allow_fork": false,
		"allow_exec": true,
		"allow_clone": false,
		"allow_network": false,
		"allow_filesystem_write": true,
		"allow_ptrace": false,
		"allow_mount": false,
		"blocked_syscalls": ["reboot", "shutdown", "mount", "umount", "ptrace"]
	},
	"security": {
		"drop_capabilities": true,
		"use_seccomp": true,
		"use_namespaces": true,
		"use_cgroups": true,
		"no_new_privileges": true,
		"chroot_jail": true
	},
	"languages": {
		"python": {
			"memory": {
				"limit_mb": 128,
				"limit_kb": 131072
			},
			"time": {
				"cpu_time_seconds": 4,
				"wall_time_seconds": 7
			},
			"processes": {
				"max_processes": 1,
				"max_forks": 0
			},
			"filesystem": {
				"max_file_size_kb": 512,
				"max_open_files": 32,
				"additional_read_only_paths": ["/usr/lib/python3*", "/usr/local/lib/python3*"],
				"required_binaries": ["/usr/bin/python3"]
			},
			"syscalls": {
				"allow_exec": false,
				"additional_blocked_syscalls": ["execve", "clone", "fork"]
			},
			"environment": {
				"PYTHONPATH": "/usr/lib/python3.11:/usr/local/lib/python3.11/dist-packages",
				"PYTHONDONTWRITEBYTECODE": "1",
				"PYTHONUNBUFFERED": "1"
			},
			"compilation": {
				"enabled": false,
				"compiler": "",
				"compiler_args": [],
				"max_compilation_time": -1,
				"max_compilation_memory_mb": -1
			}
		},
		"java": {
			"memory": {
				"limit_mb": 512,
				"limit_kb": 524288
			},
			"time": {
				"cpu_time_seconds": 8,
				"wall_time_seconds": 10
			},
			"processes": {
				"max_processes": 16,
				"max_threads": 32,
				"max_forks": 0
			},
			"filesystem": {
				"max_file_size_kb": 2048,
				"max_open_files": 128,
				"additional_read_only_paths": ["/usr/lib/jvm", "/usr/share/java"],
				"required_binaries": ["/usr/bin/java", "/usr/bin/javac"]
			},
			"syscalls": {
				"allow_exec": true,
				"allow_clone": true,
				"additional_allowed_syscalls": ["clone", "mmap", "munmap", "brk"]
			},
			"environment": {
				"JAVA_HOME": "/usr/lib/jvm/default-java",
				"CLASSPATH": ".",
				"JAVA_TOOL_OPTIONS": "-Xmx256m -Xms64m -XX:+UseSerialGC"
			},
			"compilation": {
				"enabled": true,
				"compiler": "javac -d {output} {source}",
				"compiler_args": ["-d", "{output}", "{source}"],
				"max_compilation_time": 10,
				"max_compilation_memory_mb": 256
			}
		},
		"cpp": {
			"memory": {
				"limit_mb": 256,
				"limit_kb": 262144
			},
			"time": {
				"cpu_time_seconds": 8,
				"wall_time_seconds": 10,
				"compilation_time_seconds": 60
			},
			"processes": {
				"max_processes": 8,
				"max_forks": 0
			},
			"filesystem": {
				"max_file_size_kb": 1024,
				"max_open_files": 64,
				"additional_read_only_paths": ["/usr/include", "/usr/lib/gcc"],
				"required_binaries": ["/usr/bin/gcc", "/usr/bin/g++"],
				"compilation_output_limit_kb": 4096
			},
			"syscalls": {
				"allow_exec": true,
				"compilation_syscalls": {
					"allow_fork": true,
					"allow_exec": true,
					"additional_allowed_syscalls": ["pipe", "dup2", "wait4"]
				}
			},
			"environment": {
				"PATH": "/usr/bin:/bin",
				"CFLAGS": "-O2 -static -std=c++17",
				"CXXFLAGS": "-O2 -static -std=c++17"
			},
			"compilation": {
				"enabled": true,
				"compiler": "g++",
				"compiler_args": ["-O2", "-static", "-std=c++17", "-o", "{output}", "{source}"],
				"max_compilation_time": 4,
				"max_compilation_memory_mb": 256
			}
		}
	}
}
